<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.awesome.scottquach.proximitypush_upcounter.activities.StartMenuActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_add_unit_id_startMenu"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"></com.google.android.gms.ads.AdView>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_black_round"
        android:onClick="startTrackingClicked"
        android:padding="4dp"
        android:text="@string/start_tracking"
        android:textColor="@color/textColor"
        ads:layout_constraintBottom_toTopOf="@+id/button_statistics"
        ads:layout_constraintEnd_toEndOf="@+id/button_statistics"
        ads:layout_constraintStart_toStartOf="@+id/button_statistics"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <Button
        android:id="@+id/settings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_black_round"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableTint="@android:color/white"
        android:onClick="openSettingsPage"
        android:padding="8dp"
        android:text="@string/settings"
        android:textColor="@color/textColor"
        ads:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/log"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_black_round"
        android:drawableLeft="@drawable/ic_record"
        android:onClick="logButtonClicked"
        android:padding="4dp"
        android:text="@string/log"
        android:textColor="@color/textColor"
        ads:layout_constraintBottom_toTopOf="@+id/settings"
        ads:layout_constraintEnd_toEndOf="@+id/settings"
        ads:layout_constraintStart_toStartOf="@+id/settings" />

    <Button
        android:id="@+id/button_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_black_round"
        android:onClick="statiticsButtonClicked"
        android:text="@string/statistics"
        android:textColor="@color/textColor"
        ads:layout_constraintBottom_toTopOf="@+id/log"
        ads:layout_constraintEnd_toEndOf="@+id/log"
        ads:layout_constraintStart_toStartOf="@+id/log" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_square_blue"
        android:padding="8dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Goal"
            android:textColor="@color/textColor"
            android:textSize="50sp"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/upButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_black_round"
            android:drawableLeft="@drawable/ic_arrow_up"
            android:padding="8dp"
            android:drawableTint="@android:color/white"
            android:onClick="upButtonClicked"
            android:text="@string/up"
            android:textColor="@color/textColor"
            ads:layout_constraintBottom_toTopOf="@+id/downButton"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/goalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintStart_toEndOf="@+id/textView4"
            ads:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/downButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_black_round"
            android:drawableLeft="@drawable/ic_arrow_down"
            android:drawableTint="@android:color/white"
            android:padding="8dp"
            android:onClick="downButtonClicked"
            android:text="@string/down"
            android:textColor="@color/textColor"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintTop_toBottomOf="@+id/upButton"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
