<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.awesome.scottquach.proximitypush_upcounter.StartMenu"
    android:background="#03A9F4">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_add_unit_id_startMenu">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#03A9F4">
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Start Push-Ups"
        android:onClick="startPushUpStarted"
        android:textColor="#ff00bcd4"
        android:background="@drawable/button_black_round"
        android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#AB47BC">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal"
            android:layout_marginLeft="30dp"
            android:textSize="50sp"
            android:textColor="#010101" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="up"
                android:textColor="#ff00bcd4"
                android:id="@+id/upButton"
                android:onClick="upButtonClicked"
                android:background="@drawable/button_black_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#9CCC65"
                android:id="@+id/goalTextView"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:text="down"
                android:textColor="#ff00bcd4"
                android:id="@+id/downButton"
                android:onClick="downButtonClicked"
                android:background="@drawable/button_black_round"/>






        </LinearLayout>
    </LinearLayout>

