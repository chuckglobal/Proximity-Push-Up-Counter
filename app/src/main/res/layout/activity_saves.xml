<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.awesome.scottquach.proximitypush_upcounter.Saves"
    android:background="@color/colorPrimary">

    <View
        android:background="@drawable/shape_square"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/view2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="resetButtonClicked"
        android:background="@drawable/button_black_round"
        android:textColor="@color/textColor"
        android:id="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/savedListview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="graph"
        android:background="@drawable/button_black_round"
        android:textColor="#ff00bcd4"
        android:onClick="openGraph"
        android:visibility="gone"
        android:id="@+id/button4"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="Home"
        android:textColor="@color/textColor"
        android:background="@drawable/button_black_round"
        android:drawableLeft="@drawable/ic_home"
        android:onClick="homeButtonClicked"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/button6"
        android:layout_width="88dp" />

    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="50dp"-->
    <!--android:text="Graph"-->
    <!--android:textColor="#ff00bcd4"-->
    <!--android:background="@drawable/button_black_round"-->
    <!--android:onClick="graphButtonClicked"/>-->


    <android.support.constraint.Guideline
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="65dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:layout_width="0dp"
        android:id="@+id/savedListview"

        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/highscoreView"
        android:background="@drawable/textview_transparent_white"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Highscore 100"
        android:textColor="@color/textColor"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:textStyle="normal|bold" />


</android.support.constraint.ConstraintLayout>
